{

  // editor
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  
  // files
  "files.associations": {
    "*.css": "tailwindcss"
  },
  
  // debug
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.javascript.terminalOptions": {
    "skipFiles": [
      "<node_internals>/**"
    ]
  },
  
  // eslint 
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
}