{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "importHelpers": true,
    "sourceMap": true,
    // "inlineSourceMap": true,
    // "inlineSources": true,

    // dirs
    "rootDir": "src",
    "outDir": "dist",

    // configs
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
