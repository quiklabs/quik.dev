{
    "name": "@quik/server",
    "version": "0.0.1",
    "main": "dist/index.js",
    "scripts": {
        "start": "figlet \"quik.dev\" && (trap 'kill 0' SIGINT; pnpm build:watch & sleep 3 && pnpm start:watch)",
        "start:watch": "CI=true node --watch --inspect dist/index.js",
        "start:prod": "node dist/index.js",
        "build": "rollup -c rollup.config.js --bundleConfigAsCjs",
        "build:watch": "ncc build -w -s -o dist src/index.ts",
        "build:prod": "ncc build -s -m -C -o dist src/index.ts ",
        "lint": "eslint src/**/* --ext js,ts,tsx,jsx",
        "migrate:reset": "prisma migrate reset",
        "migrate:create": "prisma migrate dev --create-only",
        "migrate": "prisma migrate deploy"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/lodash": "^4.14.200",
        "@types/node": "^20.7.0",
        "@types/pg": "^8.10.7",
        "@types/pg-format": "^1.0.4",
        "@vercel/ncc": "^0.38.1",
        "figlet-cli": "^0.1.1",
        "nodemon": "^3.0.1",
        "pino-pretty": "^10.2.3",
        "rollup": "^4.1.5",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "ascii-text-generator": "^1.0.5",
        "dotenv": "^16.3.1",
        "fastify": "^4.24.2",
        "lodash": "^4.17.21",
        "pg": "^8.11.3",
        "pg-format": "^1.0.4",
        "pino": "^8.16.0",
        "prisma": "^5.4.2",
        "typia": "^5.2.3"
    }
}
